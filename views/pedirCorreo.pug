extends layout

block content
    main
    nav
        .nav-wrapper
        a.brand-logo(href='#!') Chopper Drive
    section
        article.row
        .container.center
            .col.s12.m12
            h4  Solicitar contrase&ntilde;a
            i.large.material-icons account_circle
            .col.s12
            p
                | Introduce la direccion de correo electronico con la que creaste tu cuenta en Chopper Drive
        article.row.container
        form.col.s12(action='', method='POST', name='frmPrueba')
            .row
            .container.center
                .input-field.col.s12
                    i.material-icons.prefix email
                    label.active(for='email') Coreo Electronico
                    input#first_name.validate(type='text', name='email')
                input.waves-effect.waves-light.btn.btn-size.modal-close(type='submit' value='Enviar codigo') 
    script.
        document.forms.frmPrueba.addEventListener('submit', function (e) {
            var email = document.getElementById('first_name').value;
            var existe = 1;

            var data = {
                email: document.forms.frmPrueba.email.value
            }
            if(existe = 1){
                fetch('/drive/email', {
                    method: "POST",
                    body: JSON.stringify(data),
                    headers: {
                        'Content-Type': 'application/json'
                    }
                }).then(res => res.json())
                    .then(response => {
                        
                    })
                    .catch(err => {
                        
                    });
                }
        });